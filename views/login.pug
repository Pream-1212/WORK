meta(charset="UTF-8")
meta(name="viewport", content="width=device-width, initial-scale=1")
title Login Form
link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", rel="stylesheet")
link(rel="stylesheet", href="/css/forms.css")

body.login-page
    // Navbar
    nav.navbar.navbar-expand-lg.bg-body-tertiary
      .container-fluid
        // Brand
        a.navbar-brand(href='/') 
          img(src='/images/mwf.png' alt='Company Logo' width='80' height='80')

        // Toggler button
        button.navbar-toggler(
          type='button',
          data-bs-toggle='collapse',
          data-bs-target='#navbarNav',
          aria-controls='navbarNav',
          aria-expanded='false',
          aria-label='Toggle navigation'
        )
          span.navbar-toggler-icon

        // Navbar items
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href='/') Back to Home
            



    // Login Form
    .container.mt-5
        form(action='/login', method='post')
            .mb-3
                label.form-label(for="exampleInputEmail1") Email address
                input.form-control#exampleInputEmail1(
                    type="email", 
                    aria-describedby="emailHelp", 
                    name="email", 
                    required=''
                )
                #emailHelp.form-text We'll never share your email with anyone else.
            .mb-3
                label.form-label(for="exampleInputPassword1") Password
                input.form-control#exampleInputPassword1(
                    type="password", 
                    name="password", 
                    required=''
                )
            // Sign In and Sign Up buttons 
            .d-flex.gap-2
                button.btn.btn-primary.w-50#signInBtn(type="submit") Sign In
                if currentUser && currentUser.role === 'manager'
                    a.btn.btn-primary.w-50#signUpBtn(href='/registration') Sign Up
                else
                    a.btn.btn-primary.w-50#signUpBtn(href='/') Sign Up

    // Footer
    footer.bg-custom.text-white.text-center.py-3.mt-5
