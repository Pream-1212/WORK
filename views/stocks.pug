doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title MAYONDO WOOD FACTORY
    // Bootstrap CSS
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css' rel='stylesheet')
    // Your custom CSS
    link(href='/css/forms.css' rel='stylesheet')

  body(class="stock-page")

    // Navbar
    nav.navbar.navbar-expand-lg.bg-body-tertiary.fixed-top
      .container-fluid
        // Brand
        a.navbar-brand(href='/') 
          img(src='/images/mwf.png' alt='Company Logo' width='80' height='80')
        // Toggler button
        button.navbar-toggler(
          type='button',
          data-bs-toggle='collapse',
          data-bs-target='#navbarNav',
          aria-controls='navbarNav',
          aria-expanded='false',
          aria-label='Toggle navigation'
        )
          span.navbar-toggler-icon
        // Navbar items
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href='/logout') Logout
            li.nav-item
              a.nav-link(href='/stock') Stock
            li.nav-item
              a.nav-link(href='/Addsale') Sales
            li.nav-item
              a.nav-link(href='/general') Attendants dashboardk

    // Main content
    main.container
      .form-card.card.shadow.mx-auto.mb-4(style="max-width:500px")
        form#stock(action='/stock', method='post')
          .form-wrapper
            .form-container
              h2 Stock Entry
              .card-body
                .mb-3
                  label.form-label(for='productName') Product Name
                  select#productName.form-control(name='productName')
                    option(value='') -- Select Product --
                    option(value='Officefurniture') Officefurniture
                    option(value='Softwood') Softwood
                    option(value='Hardwood') Hardwood
                    option(value='Cupboards') Cupboards
                    option(value='Beds') Beds
                    option(value='Cabinets') Cabinets
                    option(value='Poles') Poles
                    option(value='Woodchips') Woodchips
                    option(value='Diningtables') Diningtables
                    option(value='Wardrobes') Wardrobes
                  .error
                .mb-3
                  label.form-label(for='productType') Product Type
                  select#productType.form-control(name='productType')
                    option(value='') -- Select Product --
                    option(value='Wood') Wood
                    option(value='Furniture') Furniture
                  .error
                .mb-3
                  label.form-label(for='costPrice') Cost Price
                  input#costPrice.form-control(type='number', name='costPrice')
                  .error
                .mb-3
                  label.form-label(for='sellPrice') Selling Price
                  input#sellPrice.form-control(type='number', name='sellPrice')
                  .error
                .mb-3
                  label.form-label(for='quantity') Quantity
                  input#quantity.form-control(type='number', name='quantity')
                  .error
                .mb-3
                  label.form-label(for='supplierName') Supplier Name
                  input#supplierName.form-control(type='text', name='supplierName')
                  .error
                .mb-3
                  label.form-label(for='quality') Quality
                  select#quality.form-control(name='quality')
                    option(value='') -- Select Product --
                    option(value='Low') Low 
                    option(value='High') High
                  .error
                .mb-3
                  label.form-label(for='color') Color (optional)
                  input#color.form-control(type='text', name='color')
                  .error
                .mb-3
                  label.form-label(for='measurements') Measurements (optional)
                  input#measurements.form-control(type='text', name='measurements')
                button.btn.btn-success.mt-3(type="submit") Add Stock

    // Footer
    footer.bg-custom.text-white.text-center.py-3.mt-5
