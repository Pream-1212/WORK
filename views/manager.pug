meta(charset="UTF-8")
meta(name="viewport", content="width=device-width, initial-scale=1")
title MWF Manager Dashboard
link(
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css", 
  rel="stylesheet"
)
script(src="https://cdn.jsdelivr.net/npm/chart.js")
link(rel="stylesheet", href="/css/manager.css")

// Header
header
  nav.navbar.navbar-expand-lg.navbar-light.bg-light
    a.navbar-brand(href="/")
      img(
        src="/images/mwf.png" 
        alt="Company Logo" 
        width="80" 
        height="80"
      )
    button.navbar-toggler(
      type="button", 
      data-toggle="collapse", 
      data-target="#navbarNav", 
      aria-controls="navbarNav", 
      aria-expanded="false", 
      aria-label="Toggle navigation"
    )
      span.navbar-toggler-icon
    .collapse.navbar-collapse#navbarNav
      ul.navbar-nav.ms-auto
        li.nav-item.active
          a.nav-link(href="/logout") Logout
        li.nav-item
          a.nav-link(href="/registration") Sign Up
        li.nav-item
          a.nav-link(href="/general") Attendants dashboard
        li.nav-item
          a.nav-link(href="/Addsale") Sales
        li.nav-item
          a.nav-link(href="/salesdata") Sales Table
        li.nav-item
          a.nav-link(href="/logout") Logout
        li.nav-item
          a.nav-link(href="/suppliers") Supply
        li.nav-item
          a.nav-link(href="/dash") viewpoint

// Main Content
.container-fluid.p-4
  h2.text-center.mb-4 ðŸ“Š MWF Manager Dashboard

  // Overview Cards
  .row.g-4.mb-4
    .col-md-3
      a.card.h-100.p-3.text-center.shadow-sm(href="/suppliers")
        h5 Suppliers
        p.mb-0 12 Active Suppliers
    .col-md-3
      a.card.h-100.p-3.text-center.shadow-sm(href="/Addsale")
        h5 Start up a Sale
        p.mb-0 
    .col-md-3
      a.card.h-100.p-3.text-center.shadow-sm(href="/salesdata")
        h5 Sales Report
        p.mb-0 
    .col-md-3
      a.card.h-100.p-3.text-center.shadow-sm(href="/stockreport")
        h5 Stock Report
        p.mb-0 
    .col-md-3
      a.card.h-100.p-3.text-center.shadow-sm(href="/userssection")
        h5 Users Register
        p.mb-0 8 Attendants + 2 Managers

  // Stock & Sales Summary
  .row.g-4.mb-4
    .col-md-3
      .card.h-100.p-3.text-center.shadow-sm
        h5 Total Stock Quantity
        h3 #{totalStock.totalQuantity}
    .col-md-3
      .card.h-100.p-3.text-center.shadow-sm
        h5 Total Stock Cost
        h3 UGX #{new Intl.NumberFormat().format(totalStock.totalCost)}
    .col-md-3
      .card.h-100.p-3.text-center.shadow-sm
        h5 Total Sales Quantity
        h3 #{totalSales.totalQuantity}
    .col-md-3
      .card.h-100.p-3.text-center.shadow-sm
        h5 Total Sales Revenue
        h3 UGX #{new Intl.NumberFormat().format(totalSales.totalRevenue)}

