header
  div
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      a.navbar-brand(href="/")
        img(src='/images/mwf.png' alt='Company Logo' width='80' height='80')
      button.navbar-toggler(
        type="button",
        data-toggle="collapse",
        data-target="#navbarNav",
        aria-controls="navbarNav",
        aria-expanded="false",
        aria-label="Toggle navigation"
      )
        span.navbar-toggler-icon
      .collapse.navbar-collapse#navbarNav
        ul.navbar-nav.ms-auto
          li.nav-item.active
            a.nav-link(href="/logout") Logout
          li.nav-item
            a.nav-link(href="/dash") Viewpoint
          li.nav-item
            a.nav-link(href="/general") Attendants dashboard
          li.nav-item
            a.nav-link(href="/suppliers") Supply

div.dash-page
  .section.intro-section
    

    
  //  Overview Section 
  section#overview.container.text-center
    div.overview-header.mb-2
      h2.mb-1 MWF at a Glance
    .row.g-4.mt-0
      .col-md-3
        .card.p-3
          h5 Products
          p 50+ items
      .col-md-3
        .card.p-3
          h5 Categories
          p Wood & Furniture
      .col-md-3
        .card.p-3
          h5 Suppliers
          p Upcountry Partners
      .col-md-3
        .card.p-3
          h5 Clients Served
          p 100+ Companies

  //  Products Section 
  section#products
    h2.mb-4.text-center Featured Products
    .row.g-4
      .col-md-4
        .card.feature-card
          img.card-img-top(src="https://elhelow.com/wp-content/uploads/2023/04/WOODEN_MANAGER-removebg-preview.png", alt="Office Furniture")
          .card-body.text-center
            h5.card-title Office Furniture
            p.card-text High-quality desks and chairs
      .col-md-4
        .card.feature-card
          img.card-img-top(src="images/stocking hall.webp", alt="Warehouse")
          .card-body.text-center
            h5.card-title Storage Solutions
            p.card-text Poles, timber, and raw materials
      .col-md-4
        .card.feature-card
          img.card-img-top(src="images/image.png", alt="Furniture")
          .card-body.text-center
            h5.card-title Home Furniture
            p.card-text Sofas, beds, dining sets

  //  Gallery Section 
  section#gallery
    h2.mb-4.text-center Gallery
    .row.g-3.align-items-stretch
      .col-md-3.col-sm-6
        img.gallery-img.rounded(src="images/IMG-20170802-WA0010_edited.jpg", alt="Warehouse")
      .col-md-3.col-sm-6
        video.gallery-video.rounded(controls)
          source(src="images/our video.mp4", type="video/mp4")
          | Your browser does not support the video tag.
      .col-md-3.col-sm-6
        img.gallery-img.rounded(src="images/room.avif", alt="Office")
      .col-md-3.col-sm-6
        img.gallery-img.rounded(src="images/WhatsApp Image 2023-10-24 at 12.18_edited.jpg", alt="Warehouse")

 
  .row.mt-4.justify-content-center
    .col-md-3
      a.card.h-100.p-3.text-center.shadow-sm.text-decoration-none.text-dark(href="/Addsale")
        h5 Start up a Sale
        p.mb-0 Begin a new transaction for customer sales

