extends table_layout

block content
  .container.mt-5
    h3.mb-3 User Records
    table.table.table-bordered.table-striped
      thead.table-dark
        tr
          th Fullname
          th Country
          th City/Region
          th Village
          th National Identification Number
          th Gender
          th Email address
          th Phone Number
          th Role
          if currentUser.role === 'manager'
          th Update
          th Delete
      tbody
        if items && items.length
          each item in items
            tr
              td #{item.name}
              td #{item.country}
              td #{item.city}
              td #{item.village}
              td #{item.nin}
              td #{item.gender}
              td #{item.email}
              td #{item.tel}
              td #{item.role}
              td
                a.btn.btn-warning(href=`/edituser/${item._id}`) Edit
              td
                form(method='post', action='/deleteuser')
                  input(type='hidden', name='id', value=item._id)
                  button.btn.btn-danger.btn-block(type='submit') Delete
        else
          tr
            td(colspan="11").text-center Not available

    // Add user button (placed below table)
    a.btn.btn-warning.mt-3(href='/registration') Add User
